
{{#extend 'main'}}

{{#content 'body'}}
  <main>
    <h1>Welcome to the Tech Blog</h1>

    <section>
      {{#each posts}}
        <article>
          <h2><a href="/post/{{id}}">{{title}}</a></h2>
          <p>By {{user.username}} on {{createdAt}}</p>
          <p>{{content}}</p>
        </article>
      {{/each}}
    </section>
  </main>
{{/content}}
